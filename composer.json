{
    "name":"fmup/fmup",
    "require": {
        "php": "^5.4",
        "ext-json": "^1.2",
        "ext-pcre": "0.0.0.*",
        "ext-mbstring": "0.0.0.*",
        "ext-spl": "0.2.*",
        "monolog/monolog": "^1.13",
        "phpmailer/phpmailer":"^5.2",
        "php-amqplib/php-amqplib": "^2.5",
        "predis/predis": "^1.1"
    },
    "require-dev": {
      "phing/phing": "^2.14",
      "phpunit/phpunit": "^4.0",
      "phpdocumentor/phpdocumentor": "^2.8",
      "squizlabs/php_codesniffer": "^2.3",
      "pdepend/pdepend": "^2.1",
      "phpmd/phpmd": "^2.2",
      "sebastian/phpcpd": "^2.0",
      "phploc/phploc": "^2.0 || ^3.0",
      "mayflower/php-codebrowser": "^1.1",
      "codeclimate/php-test-reporter": "dev-master"
    },
    "suggest": {
      "ext-pdo_mysql": "To use Mysql connections",
      "ext-pdo_sqlite": "To use Sqlite connections",
      "ext-sqlite3": "To use Sqlite connections",
      "ext-sysvmsg": "To use Queue system",
      "ext-ssh2": "To use Ftp system",
      "ext-memcached" : "Memcached >= 2.0.0 to use the Memcached Cache adapter",
      "ext-redis" : "Redis >= * to use the Redis Cache adapter"
    },
    "autoload": {
        "psr-4": {
            "FMUP\\": "lib"
        },
        "files": ["system/autoload.php"]
    }
}
